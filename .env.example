# osu! Music Application Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# osu! API Configuration
# ==============================================
# Get these from: https://osu.ppy.sh/home/account/edit#oauth
OSU_CLIENT_ID=your_osu_client_id_here
OSU_CLIENT_SECRET=your_osu_client_secret_here
OSU_REDIRECT_URI=http://localhost:9000/auth/osu/callback

# ==============================================
# Application Configuration
# ==============================================
# Application name displayed in UI
APP_NAME="osu! Music Fusion"
APP_VERSION=1.0.0

# Default audio settings
DEFAULT_VOLUME=0.5
DEFAULT_AUDIO_QUALITY=high

# ==============================================
# Development Configuration
# ==============================================
# Development server port
DEV_PORT=9000
DEV_HOST=localhost

# Enable debug mode (shows console logs)
DEBUG_MODE=true

# Enable hot module replacement
HMR_ENABLED=true

# ==============================================
# Music Library Configuration
# ==============================================
# Maximum file size for music uploads (in MB)
MAX_MUSIC_FILE_SIZE=50

# Supported audio formats (comma-separated)
SUPPORTED_AUDIO_FORMATS=mp3,wav,ogg,flac,m4a

# Default music library path
MUSIC_LIBRARY_PATH=./public/music

# Enable automatic cover art download
AUTO_DOWNLOAD_COVERS=true

# ==============================================
# Cache Configuration
# ==============================================
# Cache duration for API responses (in minutes)
API_CACHE_DURATION=60

# Cache duration for audio metadata (in hours)
AUDIO_CACHE_DURATION=24

# Maximum cache size (in MB)
MAX_CACHE_SIZE=500

# ==============================================
# Performance Settings
# ==============================================
# Enable audio pre-loading
ENABLE_AUDIO_PRELOAD=true

# Number of tracks to preload
PRELOAD_TRACK_COUNT=3

# Enable waveform generation
ENABLE_WAVEFORMS=false

# ==============================================
# UI Configuration
# ==============================================
# Theme preference (auto, light, dark)
DEFAULT_THEME=dark

# Language preference
DEFAULT_LANGUAGE=en-US

# Enable animations
ENABLE_ANIMATIONS=true

# Show experimental features
SHOW_EXPERIMENTAL_FEATURES=false
